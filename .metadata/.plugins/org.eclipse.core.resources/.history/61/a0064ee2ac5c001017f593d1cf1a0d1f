/* USER CODE BEGIN PV */
static const uint8_t CAN_SENT1[7] = {0x02,0x01,0x20,0x03,0x84,0x00,0x64};
static const uint8_t CAN_SENT2[7] = {0x02,0x01,0x20,0x0E,0x10,0x00,0x64};
static const uint8_t CAN_SENT3[7] = {0x02,0x01,0x20,0x07,0x08,0x00,0x64};
/* USER CODE END PV */

