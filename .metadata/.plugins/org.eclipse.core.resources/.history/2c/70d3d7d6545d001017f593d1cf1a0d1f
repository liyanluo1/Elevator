static const uint8_t CAN_SENT1[8] = {0x02,0x01,0x20,0x03,0x84,0x00,0x64,0x00};
static const uint8_t CAN_SENT2[8] = {0x02,0x01,0x20,0x0E,0x10,0x00,0x64,0x00};
